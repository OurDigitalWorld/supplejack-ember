{{!{{search-pagination meta=model.meta onChange=(action "updateParams") display="offset"}}
{{#search-result-stats meta=model.meta showDropdown=true onChange=(action "updateParams") as |stat|}}
    {{t "searchResults.stats.pageOfResults" pageNumber=stat.formattedPage totalResults=stat.formattedResults}}
{{/search-result-stats}}
<main>
  <h2 class="sr-only">{{t "searchResults.title"}}</h2>
  <div class="overlay-container">
    <div class="overlay-content">
    {{#if search.isLoading}}
        <span class="label label-default">{{t "site.loading"}}</span>
    {{/if}}
    </div>
  </div>
  {{#each model as |item|}}
    {{search-result item=item}}
  {{/each}}
  {{#if (eq model.length 0)}}
    <h2>{{t "searchResults.noResults.title"}}</h2>
    <p>{{t "searchResults.noResults.advice"}}</p>
  {{/if}}
</main>
{{search-pagination meta=model.meta}}



