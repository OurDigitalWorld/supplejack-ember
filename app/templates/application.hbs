<div id="site-container">
  <header>
    <section id="site-title">
      {{!link allows you to reset the query params, which is useful because they're normally sticky in Ember}}
      {{#link-to "search" (query-params page=1 per_page=20 and='' text='' geo_bbox='') current-when="search"}}
        <h1>Supplejack Client</h1>
      {{/link-to}}
    </section>
    <section id="search-bar"></section>
  </header>
  <div id="body-container">
    <div id="body-content">
      {{outlet}}
    </div>
    <aside id="left-sidebar"></aside>
  </div>
  <footer>
    {{#scroll-to class="pull-right" id="return-to-top" href="#site-title" duration=250}}
      Return to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
    {{/scroll-to}}
  </footer>
</div>